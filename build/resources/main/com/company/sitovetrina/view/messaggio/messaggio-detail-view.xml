<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://messaggioDetailView.title"
      focusComponent="form">
    <data>
        <instance id="messaggioDc"
                  class="com.company.sitovetrina.entity.Messaggio">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="messaggioDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="messaggioDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <dateTimePicker id="dataInvioField" property="dataInvio"/>
            <textField id="emailMittenteField" property="emailMittente"/>
            <textField id="nomeMittenteField" property="nomeMittente"/>
            <textArea id="testoField" height="9.5em" property="testo"/>
            <textField id="titoloField" property="titolo"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
