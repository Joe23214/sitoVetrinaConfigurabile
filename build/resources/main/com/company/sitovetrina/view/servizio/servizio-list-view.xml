<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://servizioListView.title"
      focusComponent="serviziosDataGrid">
    <data>
        <collection id="serviziosDc"
                    class="com.company.sitovetrina.entity.Servizio">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="serviziosDl" readOnly="true">
                <query>
                    <![CDATA[select e from Servizio e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="serviziosDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="serviziosDataGrid.createAction"/>
            <button id="editButton" action="serviziosDataGrid.editAction"/>
            <button id="removeButton" action="serviziosDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="serviziosDl"/>
        </hbox>
        <dataGrid id="serviziosDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="serviziosDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="dataCreazione"/>
                <column property="descrizione"/>
                <column property="sottoTitolo"/>
                <column property="titolo"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
