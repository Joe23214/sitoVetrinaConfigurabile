<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://newsletterAdminView.title">
    <layout classNames="newsLetterS-layout">
        <h2 text="Invia una newsletter" />

        <textField  id="subjectField" label="Oggetto" classNames="v-text-field" />
        <textField id="titleField" label="Titolo (facoltativo)" classNames="v-text-field" />
        <textArea id="bodyField" label="Testo email"  classNames="v-text-area" height="8em" />

        <fileStorageUploadField id="attachmentField"
                                label="Allegato (opzionale)"
                                acceptedFileTypes=".pdf,.jpg,.png,.txt,.docx" />

        <button id="sendButton" text="Invia a tutti gli iscritti"
                classNames="mt-l" />
    </layout>
</view>