<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://uservListView.title"
      focusComponent="uservsDataGrid">
    <data>
        <collection id="uservsDc"
                    class="com.company.sitovetrina.entity.Userv">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="uservsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Userv e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="uservsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="uservsDataGrid.createAction"/>
            <button id="editButton" action="uservsDataGrid.editAction"/>
            <button id="removeButton" action="uservsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="uservsDl"/>
        </hbox>
        <dataGrid id="uservsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="uservsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="cognome"/>
                <column property="dataCreazione"/>
                <column property="email"/>
                <column property="nome"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
