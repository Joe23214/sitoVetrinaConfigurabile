<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://uservDetailView.title"
      focusComponent="form">
    <data>
        <instance id="uservDc"
                  class="com.company.sitovetrina.entity.Userv">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="uservDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="uservDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="cognomeField" property="cognome"/>
            <dateTimePicker id="dataCreazioneField" property="dataCreazione"/>
            <textField id="emailField" property="email"/>
            <textField id="nomeField" property="nome"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
