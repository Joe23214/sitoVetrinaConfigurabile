<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://servizioDetailView.title"
      focusComponent="form">
    <data>
        <instance id="servizioDc"
                  class="com.company.sitovetrina.entity.Servizio">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="servizioDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout classNames="form-section" id="form" dataContainer="servizioDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textArea classNames="v-text-area" id="descrizioneField" height="9.5em" property="descrizione"/>
            <textField classNames="v-text-field" id="sottoTitoloField" property="sottoTitolo"/>
            <textField classNames="v-text-field" id="titoloField" property="titolo"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
